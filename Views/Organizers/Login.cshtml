@model EventSpotterWeb.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="centered-form">
    <div class="login-form">
        <div style="text-align: center;">
            <img src="~/Images/LogoEventSpotter1.png" alt="Logo" style="max-width: 200px; height: auto; margin-bottom: 20px;" />
        </div>
        
        <h2 class="text-center">Login</h2>
        

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="RememberMe">Remember me</label>
            </div>
            <button type="submit" class="btn btn-danger">Login</button>
        </form>

    </div>
</div>