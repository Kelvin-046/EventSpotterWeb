@{
    ViewData["Title"] = "Home Page";
}

<div style="text-align: left; padding-left: 20px;">
    <img src="~/Images/LogoEventSpotter1.png" alt="Logo" style="max-width: 250px; height: auto;" />
</div>

<div style="text-align: center;">
    <h1>Welcome to EventSpotter</h1>
    <p>Discover and reserve your favorite events!</p>

    <!-- Buttons for Participant and Organizer Login -->
    <div style="margin: 20px 0;">
        <a href="/Participants/Login" class="btn btn-danger" style="margin-right: 10px;">Participant Login</a>
        <a href="/Organizers/Login" class="btn btn-danger">Organizer Login</a>
    </div>

    <!-- Register link styled as text -->
    <div style="margin-top: 10px;">
        <a href="/Accounts/Create" style="text-decoration: underline; color: blue;">Register</a>
    </div>

    <br />
    <img src="~/Images/pexels-wendywei-1306791.jpg" alt="Event Image" style="max-width: 50%; height: auto; border-radius: 5px; display: block; margin: 0 auto;" />
</div>
